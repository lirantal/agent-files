{
  "name": "agent-files",
  "description": "A library that provides, detects and parses files used by coding agents and other AI tools so you don't have to reinvent the track them yourself",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.mjs"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "engines": {
    "node": ">=20.13.0"
  },
  "packageManager": "npm@8.4.0",
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "lint:markdown": "npx -y markdownlint-cli@0.45.0 -c .github/.markdownlint.yml '**/**.md' --ignore 'docs/**' --ignore 'node_modules/**'",
    "test": "c8 node --import tsx --test __tests__/**/*.test.ts"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@types/node": "^24.0.3",
    "c8": "^10.1.2",
    "eslint": "^9.6.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^16.0.0",
    "lockfile-lint": "^4.14.0",
    "markdownlint-cli": "^0.45.0",
    "neostandard": "^0.12.1",
    "tsup": "^8.1.0",
    "tsx": "^4.19.4",
    "typescript": "^5.5.3",
    "validate-conventional-commit": "^1.0.4"
  },
  "lint-staged": {
    "**/*.{js,json}": [
      "npm run lint:fix"
    ]
  },
  "homepage": "https://github.com/lirantal/agent-files",
  "bugs": {
    "url": "https://github.com/lirantal/agent-files/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lirantal/agent-files.git"
  },
  "keywords": [
    "mcp",
    "model context protocol",
    "ai agents",
    "agent files",
    "agent metadata"
  ],
  "publishConfig": {
    "provenance": true,
    "access": "public"
  },
  "license": "Apache-2.0",
  "c8": {
    "exclude": [
      "dist/**",
      "coverage/**",
      "__tests__/**",
      "**/*.test.ts",
      "**/*.test.js"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "text",
      "lcov",
      "html"
    ]
  },
  "author": {
    "name": "Liran Tal",
    "email": "liran.tal@gmail.com",
    "url": "https://github.com/lirantal"
  }
}
